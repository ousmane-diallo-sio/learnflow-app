<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomBtn">
        <attr name="text" format="string" />
        <attr name="textColor" format="reference" />
        <attr name="btnBackgroundColor" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="customHeight" format="dimension" />
        <attr name="elevation" format="dimension" />
        <attr name="iconBefore" format="reference" />
        <attr name="iconAfter" format="reference" />
        <attr name="iconsSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CustomInput">
        <attr name="icon" format="reference" />
        <attr name="hint" format="reference" />
        <attr name="inputType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
            <enum name="phoneNumber" value="3" />
            <enum name="zipCode" value="3" />
            <enum name="date" value="16" />
            <enum name="textEmailAddress" value="32" />
            <enum name="textPassword" value="128" />
        </attr>
        <attr name="isRequired" format="boolean" />
        <attr name="showErrorText" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ItemsSelector">
        <attr name="multiSelection" format="boolean" />
    </declare-styleable>
    <declare-styleable name="Slider">
        <attr name="disableBtnPrev" format="boolean" />
        <attr name="disableBtnNext" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SelectorItem">
        <attr name="itemText" format="string|reference" />
        <attr name="selectorId" format="string" />
    </declare-styleable>
    <declare-styleable name="ImagePicker">
        <attr name="isRequired">boolean</attr>
    </declare-styleable>
</resources>