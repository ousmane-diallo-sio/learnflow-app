<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tvNormalTextStyle">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="tvBoldTextStyle">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <style name="tvSubtitleTextStyle">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">#808080</item>
    </style>
    <style name="tvErrorStyle">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/carmine_red</item>
    </style>
    <style name="etNormalTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>